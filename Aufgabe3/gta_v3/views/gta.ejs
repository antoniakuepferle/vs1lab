<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>GeoTagApp</title>
		<link rel='stylesheet' href='./stylesheets/style.css'/>
	</head>

	<body>

		<header>
			<img src="./images/location.png" width="100"
					alt="an image of a map and location">
			<h1>GeoTagApp</h1>
			<nav>
				<a href="#">About</a> | <a href="#">Help</a> | <a
					href="/">Home</a>
			</nav>
		</header>

		<main>

			<section class="tagging col-3">
				<h2>Tagging</h2>

				<!-- ############### Aufgabe1a Form1 Start -->
				<form id="tag-form" action="/tagging" method="post">
					<fieldset>
						<legend>Enter new GeoTag:</legend>
							<label for="latitude">latitude</label>
							<input type="text" id="search-latitude" name="latitude" placeholder="49.01379" required value="<%= latitude %>">
							<label for="longitude">longitude</label>
							<input type="text" id="search-longitude" name="longitude" placeholder="8.390071" required value="<%= longitude %>">
							<label for="name">name</label>
							<input type="text" id="name" name="name" placeholder="me llamo" required maxlength="10">
							<label for="hashtags">hashtags</label>
							<input type="text" id="hashtags" name="hashtags" placeholder="# + max. 10 letters" pattern="#+[a-z]{1,10}">
							<input type="submit" value="submit">
					</fieldset>
				</form>
				<!-- ############### Aufgabe1a Form1 Ende -->

			</section>

			<section class="discovery col-9">
				<h2>Discovery</h2>

				<!-- ############### Aufgabe1a Form2 Start -->
				<form id="filter-form" action="/discovery" method="post">
					<fieldset>
						<legend>Filter by Searchterm:</legend>
							<input type="text" id="searchterm" name="searchterm" placeholder="search term" value="<%= searchterm %>">
							<input type="submit" value="apply">
							<input type="text" id="filter-latitude" name="latitude" hidden>
							<input type="text" id="filter-longitude" name="longitude" hidden>
					</fieldset>
				</form>
				<!-- ############### Aufgabe1a Form2 Ende -->

				<div class="taglist col-5">
					<ul id="results">
						<% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
							<li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
						<% }); %>
					</ul>
				</div>

				<div class="tagmap col-7">
					<img data-tags="<%= tags %>" id="result-img" src="./images/mapview.jpg" alt="a map with locations"/>
					<div class="caption">Result map</div>
				</div>

			</section>

		</main>

		<footer class="col-12">
			<span>2017 by LKIT</span>
		</footer>


		<!-- Load JavaScripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="./javascripts/geotagging.js"></script>

	</body>
</html>